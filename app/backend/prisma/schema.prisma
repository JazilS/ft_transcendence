generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
  // url      = "postgresql://jsabound:jsabound@localhost:5432/transcendance"

model User {
  // id                Int    @id @default(autoincrement())
  id                String    @id @default(uuid()) //@unique
  email             String    @unique
  avatar            String?
  status            STATUS    @default(OFFLINE)
  nickname          String?   @unique @db.VarChar(16)
  twoFa             Boolean   @default(false)
  twoFaSecret       String?

  friends           User[]    @relation("Friends")
  friendsRelation   User[]    @relation("Friends")

  // friendsWaitList   User[]    @relation("NewFriend")
  // friendsRequest    User[]    @relation("NewFriend")

  // blockedUsers      User[]    @relation("BlockUser")
  // blockedBy         User[]    @relation("BlockUser")

  // games    Game[]
  chatrooms Chatroom[]
}

model Message {
  id      String @id @default(uuid())
  content String
  chat    Chatroom @relation(fields: [chatId], references: [id])
  chatId  String
}

model Chatroom {
  id       String   @id @default(uuid())
  name     String
  messages Message[]
  users    User[]
  chatroomType     TYPE
}

model GameHistory {
  id       String @id @default(uuid())
  winner   String
  winnerId String
  looser   String
  looserId String
}
// model pong {
  
// }

enum TYPE {
  DM
  PUBLIC
  PROTECTED
  PRIVATE
}

enum STATUS {
  ONLINE
  OFFLINE
  PLAYING
}
